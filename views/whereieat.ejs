<!DOCTYPE html>
<html>
<head>
    <title>Astypalea Food Page</title>
    <link rel="stylesheet" href="/stylesheets/landing.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript" async></script>
</head>
<body>
    <section class="nav-bar">
        <div class="logo">Astypalea</div>
        <ul class="menu">
            <li><a href="#">home</a></li>
            <li><a href="#">tours</a></li>
            <li><a href="#">package</a></li>
            <li><a href="#">blog</a></li>
            <li><a href="#">about us</a></li>
            <li><a href="#">contact us</a></li>
        </ul>
        </div>
    
    </section>

<!-- Nav Bar -->
<section class="places">
    <div class="places-text">
      <h3>Που θα φαω;</h3>
    </div>

  
    <div class="cards">
      <% food.forEach(function(foods) { %>  
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <i class="bi bi-utensils-fill"></i> Title: <%= foods.title %>
          </h5>
          <h6 class="card-subtitle mb-2 text-muted">
            <i class="bi bi-geo-alt-fill"></i> Location: <%= foods.location %>
          </h6>
          <p class="card-text">
            <i class="bi bi-card-text"></i> Description: <%= foods.description %>
          </p>
          <p class="card-text">
            <i class="bi bi-telephone-fill"></i> Phone: <%= foods.phone %>
          </p>
        </div>
      </div>
      <% }) %>
    </div>
  </section>
  

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<style>
   .card-title {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 10px;
}

.card-subtitle {
    font-size: 16px;
    color: #666;
    margin-bottom: 5px;
}

.card-text {
    font-size: 14px;
    margin-bottom: 10px;
}

 
</style>